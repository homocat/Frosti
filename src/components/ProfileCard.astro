---
import { Image } from "astro:assets";
import Menu from "../components/ProfileCardMenu.astro"
import Footer from "../components/ProfileCardFooter.astro"
import { SITE_TITLE, SITE_DESCRIPTION, USER_NICKNAME, USER_DESCRIPTION, TRANSITION_API } from "../consts";
import ProfileCardMenu from "./ProfileCardMenu.astro";
const {
  name,
  desc,
  includeSidebar = true,
} = Astro.props;
---

<div class="profile-card card bg-base-100 shadow-xl p-4">
  <div class="avatar px-6">
    <!-- 你的个人头像 -->
    <Image
      class="mask"
      format="webp"
      width={300}
      height={300}
      src="/profile.webp"
      alt="Profile image"
    />
  </div>
  <ProfileCardMenu />
</div>